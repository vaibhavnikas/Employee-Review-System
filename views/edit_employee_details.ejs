<link rel="stylesheet" href="<%= assetPath('css/add_employee.css') %>">

<div id="form-container">
    &nbsp;
    <form action="/admin/update-employee/<%=employee.id%>" id="main" method="POST">
        <h2>Add Employee Details</h2>

        <div class="input-parent">
            <label for="name">Name</label>
            <input type="text" name="name" placeholder="Name" id="name" value="<%=employee.name%>" required>
        </div>

        <div class="input-parent">
            <label for="email">Email</label>
            <input type="email" name="email" placeholder="Email" id="email" value="<%=employee.email%>" required>
        </div>

        <div class="input-parent">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Password" id="password" value="<%=employee.password%>" required>
        </div>

        <div class="input-parent">
            <label for="department">Department</label>
            <input type="text" name="department" placeholder="Department" id="department" value="<%=employee.department%>" required>
        </div>

        <div class="input-parent">
            <label for="designation">Designation</label>
            <input type="text" name="designation" placeholder="Designation" id="designation" value="<%=employee.designation%>" required>
        </div>
        
        <button type="submit">Update</button>
    </form>
</div>