<link rel="stylesheet" href="<%= assetPath('css/employee_view.css') %>">

<div id="employee-view-container">
    <div class="wrapper">
        <ul>
            <li>
                <input type="radio" id="tab1" name="tab" checked>
                <label for="tab1">Pending Reviews</label>
                <div class="tab_content">
                    <div id="review-list">
                        <table>
                            <thead>
                                <tr>
                                    <th>S No.</th>
                                    <th>Review From Employee</th>
                                    <th>Review To Employee</th>
                                    <th>Rating</th>
                                    <th>Feedback</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <%for(let i=0,counter = 1;i<reviews.length;i++){%>
                                        <%if(reviews[i].status == 'pending'){%>
                                            <tr>
                                                <td><%=counter%></td> <%counter++%>
                                                <td><%=reviews[i].from_employee.name%></td>
                                                <td><%=reviews[i].to_employee.name%></td>
                                                <td><%=reviews[i].rating%></td>
                                                <td><%=reviews[i].feedback%></td>
                                                <td><a href="/employee/update-review/<%= reviews[i].id %>">Complete</a></td>
                                            </tr>
                                        <%}%>    
                                    <%}%>
                            </tbody>
                        </table>    
                    </div>
                </div>
            </li>
            <li>
                <input type="radio" id="tab2" name="tab">
                <label for="tab2">Completed Reviews</label>
                <div class="tab_content">
                    <div id="review-list">
                        <table>
                            <thead>
                                <tr>
                                    <th>S No.</th>
                                    <th>Review From Employee</th>
                                    <th>Review To Employee</th>
                                    <th>Rating</th>
                                    <th>Feedback</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%for(let i=0,counter = 1;i<reviews.length;i++){%>
                                    <%if(reviews[i].status == 'completed'){%>
                                        <tr>
                                            <td><%=counter%></td> <%counter++%>
                                            <td><%=reviews[i].from_employee.name%></td>
                                            <td><%=reviews[i].to_employee.name%></td>
                                            <td><%=reviews[i].rating%>/5</td>
                                            <td><%=reviews[i].feedback%></td>
                                            <td><a href="/employee/update-review/<%= reviews[i].id %>">Update</a></td>
                                        </tr>
                                    <%}%>    
                                <%}%>
                            </tbody>
                        </table>    
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>